<UserControl x:Class="LibraryApp.Views.LibraryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:conv="clr-namespace:LibraryApp.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">

    <UserControl.Resources>
        <conv:ListToStringConverter x:Key="ListToStringConverter"/>
    </UserControl.Resources>

    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Фильтры: " VerticalAlignment="Center" FontWeight="Bold"/>
            <ComboBox SelectedIndex="0" Width="120" Margin="5,0">
                <ComboBoxItem Content="Все типы"/>
                <ComboBoxItem Content="Книги"/>
                <ComboBoxItem Content="Статьи"/>
                <ComboBoxItem Content="Заметки"/>
            </ComboBox>
        </StackPanel>

        <ListView Grid.Row="1" ItemsSource="{Binding Books}" 
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <EventSetter Event="MouseDoubleClick" 
                                  Handler="ListViewItem_MouseDoubleClick"/>
                    <Setter Property="ContextMenu">
                        <Setter.Value>
                            <ContextMenu>
                                <MenuItem Header="Открыть" 
                                          Command="{Binding DataContext.OpenBookCommand, RelativeSource={RelativeSource AncestorType={x:Type ListView}}}"
                                          CommandParameter="{Binding}"/>
                                <MenuItem Header="Быстрый пересказ ИИ"/>
                                <MenuItem Header="Добавить теги"/>
                            </ContextMenu>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Title}" Width="300"/>
                    <GridViewColumn Header="Автор" DisplayMemberBinding="{Binding Author}" Width="200"/>
                    <GridViewColumn Header="Тип" DisplayMemberBinding="{Binding FileType}" Width="100"/>
                    <GridViewColumn Header="Статус" DisplayMemberBinding="{Binding ReadingStatus}" Width="150"/>
                    <GridViewColumn Header="Теги" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Tags, Converter={StaticResource ListToStringConverter}}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>